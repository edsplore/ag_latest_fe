modules = ["nodejs-20", "web"]
run = "npm run preview"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run preview -- --host 0.0.0.0 --port 4173"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 4173
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 3000

[workflows]
runButton = "Run Dev"

[[workflows.workflow]]
name = "Run Preview"
author = 38908492
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run preview"

[[workflows.workflow]]
name = "Run Dev"
author = 38908492
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Production"
author = 38908492
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run preview -- --host 0.0.0.0 --port 4173"
